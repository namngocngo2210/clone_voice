{
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devPath": "http://localhost:5173",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "CloneVoice",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true,
                "sidecar": true
            },
            "process": {
                "all": true
            },
            "dialog": {
                "all": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "$HOME/**"
                ]
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.clonevoice.app",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "externalBin": [
                "sidecar/voice-engine"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Clone Voice Tool",
                "width": 1450,
                "height": 850
            }
        ]
    }
}